<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_7sdp"
    android:padding="@dimen/_7sdp"
    android:background="@drawable/rounded_edittext_white"
    android:orientation="vertical"
    android:id="@+id/layoutCourse"
    android:elevation="@dimen/_5sdp"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="C001"
    android:id="@+id/txtCode"
    android:textSize="@dimen/_14ssp"
    android:fontFamily="@font/calibaraibold"
    android:textColor="@android:color/black"
    android:layout_margin="@dimen/_3sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web Development"
        android:id="@+id/txtTitle"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/calibaraibold"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/_3sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_credits"
        android:id="@+id/txtCredits"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/calibaraireg"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/_3sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_seats"
        android:id="@+id/txtSeats"
        android:textSize="@dimen/_13ssp"
        android:fontFamily="@font/calibaraireg"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/_3sdp"/>
</LinearLayout>
