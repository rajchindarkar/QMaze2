<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/_7sdp"
    android:padding="@dimen/_7sdp"
    android:background="@drawable/rounded_edittext_white"
    android:orientation="vertical"
    android:id="@+id/layoutStudent"

    android:elevation="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John"
        android:id="@+id/txtName"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/calibaraibold"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/_3sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123@456.789"
        android:id="@+id/txtEmail"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/calibaraireg"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/_3sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEduLevel"
        android:text="Level"
        android:textSize="@dimen/_14ssp"
        android:fontFamily="@font/calibaraireg"
        android:textColor="@android:color/black"
        android:layout_margin="@dimen/_3sdp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_add"
        app:tint="@android:color/black"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:id="@+id/imgAdd"
        android:layout_toLeftOf="@+id/imgDelete"
        />
    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:id="@+id/imgDelete"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/ic_delete"
        android:layout_centerVertical="true"
       android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_5sdp"/>

</RelativeLayout>
